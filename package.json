{
  "name": "sol-css",
  "type": "module",
  "version": "0.0.33",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build:reset": "lightningcss --bundle --targets 'defaults' src/base/reset.css -o build/sol.reset.css",
    "build:core": "lightningcss --bundle --targets 'defaults' src/core.css -o build/sol.core.css",
    "build:complete": "lightningcss --bundle --targets 'defaults' src/sol.css -o build/sol.css",
    "build:dev": "lightningcss --bundle --targets 'defaults' src/sol.css -o build/sol.css",
    "build:prod": "npm run build:complete && npm run build:core && npm run build:reset", 
    "build:min": "lightningcss --bundle --targets 'defaults' build/*.css --output-dir build/minified --minify",
    "build": "npm run build:prod && npm run build:min"
  },
  "devDependencies": {
    "lightningcss": "^1.26.0"
  },
  "dependencies": {
    "lightningcss-cli": "^1.26.0"
  }
}
