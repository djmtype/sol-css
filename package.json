{
  "name": "sol-css",
  "type": "module",
  "version": "0.0.31",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build:reset": "lightningcss --bundle --targets 'defaults' src/base/reset.css -o build/sol.reset.css",
    "build:base": "lightningcss --bundle --targets 'defaults' src/base.css -o build/sol.base.css",
    "build:dev": "lightningcss --bundle --targets 'defaults' src/sol.css -o build/sol.css",
    "build:prod": "lightningcss --bundle --targets 'defaults' src/sol.css -o build/sol.min.css --minify", 
    "build": "npm run build:dev && npm run build:prod && npm run build:base && npm run build:reset"
  },
  "devDependencies": {
    "lightningcss": "^1.26.0"
  },
  "dependencies": {
    "lightningcss-cli": "^1.26.0"
  }
}
